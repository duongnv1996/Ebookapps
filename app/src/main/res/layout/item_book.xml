<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e2e2"
    android:orientation="vertical"
    android:padding="@dimen/size_pading_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:elevation="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <carbon.widget.ImageView
                android:id="@+id/shadow"
                android:layout_width="@dimen/size_img"
                android:layout_height="100dp"
                android:layout_marginLeft="@dimen/size_pading_16"
                android:scaleType="fitXY"
                android:src="@drawable/bg"
                app:carbon_elevation="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/size_pading_16"
                android:paddingRight="16dp">

                <TextView
                    style="@style/style_text_drawable"
                    android:text="Android" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:drawablePadding="2dp"
                    android:text="Android developer to master Ebook app Layout"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="By DuongKK - 8 days ago"
                    android:textSize="12sp"></TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <carbon.widget.ImageView
                android:layout_width="@dimen/size_img"
                android:layout_height="100dp"
                android:layout_marginLeft="@dimen/size_pading_16"
                android:scaleType="fitXY"
                android:visibility="invisible"
                app:carbon_elevation="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_pading_16"
                android:gravity="center_vertical"
                android:paddingRight="16dp">

                <TextView
                    style="@style/style_text_drawable"
                    android:drawableLeft="@drawable/ic_favorite_black_24dp"
                    android:text="12" />

                <TextView
                    style="@style/style_text_drawable"
                    android:layout_marginLeft="8dp"
                    android:drawableLeft="@drawable/ic_chat_bubble_black_24dp"
                    android:text="3" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/selector_check"
                        android:layout_gravity="right"
                        android:checked="true" />
                </FrameLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:minHeight="180dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="2dp">

    </android.support.v7.widget.CardView>

</RelativeLayout>